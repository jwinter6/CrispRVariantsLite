# in R
library(GenomicFeatures)

txdb <- makeTxDbFromGFF("/home/Shared_taupo/data/annotation/Danio_rerio/gtf_Ensembl75/Danio_rerio.Zv9.75.gtf", format = "gtf")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Danio_rerio/gtf_Ensembl75/zebrafish_danRer7_Ensembl75_txdb.sqlite")

txdb <- makeTxDbFromGFF("/home/Shared_taupo/data/annotation/Danio_rerio/Danio_rerio.GRCz10.81.gtf.gz", format = "gtf")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Danio_rerio/zebrafish_GRCz10_Ensembl81_txdb.sqlite")

txdb <- makeTxDbFromGFF("/home/Shared_taupo/data/annotation/Mouse/Ensembl_GRCm38.82/GTF/Mus_musculus.GRCm38.82.gtf", format = "gtf")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Mouse/Ensembl_GRCm38.82/GTF/mouse_mm10_Ensembl82_txdb.sqlite")

txdb <- makeTxDbFromGFF("/home/Shared_taupo/data/annotation/Human/Ensembl_GRCh37.71/gtf/Homo_sapiens.GRCh37.71.gtf", format = "gtf")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Human/Ensembl_GRCh37.71/gtf/human_hg19_Ensembl71_txdb.sqlite")

# goto ./data/txdb and add links to .SQLITE file
ln -s /home/Shared_taupo/data/annotation/Human/Ensembl_GRCh37.71/gtf/human_hg19_Ensembl71_txdb.sqlite human_hg19_Ensembl71
