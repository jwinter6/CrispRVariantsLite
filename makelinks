# in R
# suck down the UCSC tables and use these via a TxDb SQLITE file for each chromosome
# Note: SAME name as the genome reference
library(GenomicFeatures)

txdb <- makeTxDbFromUCSC("danRer7", "ensGene")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Danio_rerio/danRer7.sqlite")

txdb <- makeTxDbFromUCSC("danRer10", "ensGene")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Danio_rerio/danRer10.sqlite")

txdb <- makeTxDbFromUCSC("mm10", "ensGene")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Mouse/mm10.sqlite")

txdb <- makeTxDbFromUCSC("hg19", "ensGene")
saveDb(txdb, file= "/home/Shared_taupo/data/annotation/Human/hg19.sqlite")


# goto ./data/txdb and add links to .SQLITE file
ln -s /home/Shared_taupo/data/annotation/Human/hg19.sqlite
ln -s /home/Shared_taupo/data/annotation/Mouse/mm10.sqlite
ln -s /home/Shared_taupo/data/annotation/Danio_rerio/danRer10.sqlite
ln -s /home/Shared_taupo/data/annotation/Danio_rerio/danRer7.sqlite

txdb <- makeTxDbFromGFF("/home/Shared_taupo/data/annotation/Musca/aabys_reference/gtf/Musca-domestica-aabys_BASEFEATURES_MdomA1.1.gtf")
saveDb(txdb, file = "/home/Shared_taupo/data/annotation/Musca/aabys_reference/gtf/Musca-domestica-aabys_BASEFEATURES_MdomA1.1.sqlite")

